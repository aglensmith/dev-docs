encil-cli.\n\nThemes downloaded from this endpoint may be edited using stencil-cli for local development."}],"children":[{"title":"Themes","route":{"path":"/themes"},"data":{"children":[{"title":"Get All Store Themes","route":{"path":"/getstorethemes"},"config":{"sidebar":{"token":"get"}},"data":{}},{"title":"Upload New Theme","route":{"path":"/uploadtheme"},"config":{"sidebar":{"token":"post"}},"data":{}},{"title":"Get a Store Theme","route":{"path":"/getstoretheme"},"config":{"sidebar":{"token":"get"}},"data":{}},{"title":"Delete a Store Theme","route":{"path":"/deletestoretheme"},"config":{"sidebar":{"token":"delete"}},"data":{}},{"title":"Download a Store Theme","route":{"path":"/downloadtheme"},"config":{"sidebar":{"token":"post"}},"data":{}},{"title":"Activate a Store Theme","route":{"path":"/activatestoretheme"},"config":{"sidebar":{"token":"post"}},"data":{}},{"title":"Get a Theme Job","route":{"path":"/getjob"},"config":{"sidebar":{"token":"get"}},"data":{}}]}}]}}}}
